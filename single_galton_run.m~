function [r] = single_galton_run(Nrows)
    [x, y] = galton(Nrows);
    plot(x,y, 'bo')
    hold on
    r = zeros([Nballs 1]);
    for i = Nrows:-1:1
        r = r + randi(2)*2-3
        plot(r, i, 'ro')
        hold on
        pause
    end
    
    for i=1:1:Nrows
        r = r + randi(2, [Nballs 1])*2 - 3;
    end
end